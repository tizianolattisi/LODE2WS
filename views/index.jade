extends layout

block content
    h1= title
    p Welcome to #{title}
    .controls
        input.field(style='width:350px;', id='to_send', name='to_send')
        input.send(type='button', value='send', onclick="webSocketTest()")

block scripts
    script(type='text/javascript', src='/javascripts/socket.io.js')
    script(type='text/javascript').
        function webSocketTest(){
            var socket = io('http://localhost:3000');
            socket.emit('text', { data: document.getElementById('to_send').value });
        }
